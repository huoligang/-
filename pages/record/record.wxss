}
.recordTRight{
  display: flex;
  align-items: center;
}
.recordBox{
  width: 690rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  margin-bottom: 20rpx;
}
.recordBottomText{
  padding: 0 30rpx 0 100rpx;
