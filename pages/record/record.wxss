}
.redDot{
  position: relative;
  z-index: 555;
}
.redDot::after{
  content: " ";
  width: 16rpx;
  height: 16rpx;
  background: #fca377;
  border-radius: 50%;
  position: absolute;
  right: 16rpx;
  bottom: 16rpx;
}
.userNameText{
  font-size: 24rpx;
